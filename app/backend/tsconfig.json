{
    "compilerOptions": {
        //"lib": ["es5", "es6"],
        "target": "ESNEXT",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": false
    },
    "include": ["./src/**/*.ts"]
}


